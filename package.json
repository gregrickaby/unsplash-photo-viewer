{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "description": "A slightly opinionated, yet bare-bones Next.js starter.",
  "homepage": "https://github.com/gregrickaby/nextjs-starter/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/nextjs-starter.git"
  },
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/nextjs-starter/issues"
  },
  "private": true,
  "license": "GPL-2.0",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook",
    "clean": "rm -rf .next",
    "deploy prod": "now --prod",
    "deploy staging": "now",
    "dev": "yarn clean && next dev",
    "develop": "yarn dev",
    "export": "next export",
    "format": "npx prettier --config=prettier.config.js '**/*.{js,jsx,ts,tsx,md,html,css,scss,json}' --write || true",
    "lint": "yarn format && yarn lint:js && yarn lint:css",
    "lint:css": "npx stylelint --config=stylelint.config.js '**/*.css' --fix || true",
    "lint:js": "npx eslint --config=.eslintrc.js ./ --fix || true",
    "start": "next start",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "hamburger-react": "^2.2.0",
    "next": "latest",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-a11y": "^6.0.26",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "prop-types": "^15.7.2",
    "react-is": "^16.13.1",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^1.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
